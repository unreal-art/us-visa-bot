# =============================================================================
# VISA SLOT BOOKING AUTOMATION - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control (it contains sensitive data)

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Visa Portal Credentials (REQUIRED)
VISA_USERNAME=your_email@example.com
VISA_PASSWORD=your_secure_password

# Application Details (REQUIRED)
APPLICATION_ID=123456789

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Country and Consulate Settings
COUNTRY_CODE=in                    # Country code (default: in for India)
CONSULAR_ID=122                    # Consulate ID (see README for list)

# Automation Behavior
RETRY_TIMEOUT=180                  # Seconds between slot checks (default: 180)
MAX_RETRIES=50                     # Maximum retry attempts (default: 50)
HEADLESS=false                     # Run browser in headless mode (true/false)

# =============================================================================
# NOTIFICATION SETTINGS (OPTIONAL)
# =============================================================================

# Telegram Notifications
# Get bot token from @BotFather and chat ID from bot updates
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHI...
TELEGRAM_CHAT_ID=123456789

# =============================================================================
# CAPTCHA SOLVING SERVICES (OPTIONAL)
# =============================================================================

# 2captcha Service (Paid - Most Reliable)
USE_2CAPTCHA=false                 # Enable 2captcha service (true/false)
CAPTCHA_API_KEY=your_2captcha_api_key

# Wit.ai Service (Free with API key)
WIT_API_KEY=your_wit_ai_api_key

# =============================================================================
# ADVANCED SETTINGS (OPTIONAL)
# =============================================================================

# Browser Settings
BROWSER_TIMEOUT=30000              # Browser timeout in milliseconds
PAGE_LOAD_TIMEOUT=10000            # Page load timeout in milliseconds

# Rate Limiting
RATE_LIMIT_REQUESTS=10             # Max requests per time window
RATE_LIMIT_WINDOW=60               # Time window in seconds

# Logging
LOG_LEVEL=INFO                     # Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_FILE=visa_automation.log       # Log file name

# =============================================================================
# SECURITY SETTINGS (OPTIONAL)
# =============================================================================

# Encryption (for sensitive data storage)
ENCRYPTION_KEY=your_encryption_key_here

# User Agent Rotation
ROTATE_USER_AGENT=true             # Rotate user agents (true/false)

# =============================================================================
# CONSULATE ID REFERENCE
# =============================================================================
# Chennai   = 122
# Hyderabad = 123
# Kolkata   = 124
# Mumbai    = 125
# New Delhi = 126

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual credentials and preferences
# 3. Never commit .env to version control
# 4. Run: python main.py --setup (for interactive configuration)
# 5. Test: python main.py --check-only
